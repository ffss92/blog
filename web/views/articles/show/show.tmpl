{{define "articles-content"}}
<section class="max-w-2xl space-y-4">
    <h1 class="text-3xl md:text-5xl font-bold font-heading">
        {{.Article.Title}}
    </h1>
    
    <ul class="flex gap-2">
        {{range .Article.Tags}}
        <li class="text-xs font-medium underline">#{{.}}</li>
        {{end}}
    </ul>

    <article class="article">
        <p>{{.Article.Subtitle}}</p>
        {{.Article.Content}}
    </article>
</section>
{{end}}