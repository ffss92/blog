{{define "articles-content"}}
<section class="max-w-2xl mx-auto space-y-4">
    <h1 class="text-4xl font-bold">
        {{.Article.Title}}
    </h1>
    <p>{{.Article.Author}}, {{.Article.Date}}</p>
    
    <ul class="flex gap-2">
        {{range .Article.Tags}}
        <li class="text-xs px-2.5 py-1.5 bg-stone-900 text-stone-50 rounded-full font-medium">
            {{.}}
        </li>
        {{end}}
    </ul>

    <article class="article">
        {{.Article.Content}}
    </article>
</section>
{{end}}